<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/backrepeat">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_top"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.1" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_bottom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.9" />

	<!-- GUIDELINES to define the three-column structure -->
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.40" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.70" /> <!-- Adjusted from 0.8 to give payments more space -->

	<!-- ============================================= -->
	<!-- ================= TOP BAR =================== -->
	<!-- ============================================= -->
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/COLOUR_HEADER_BACKGROUND"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/guideline_top"
		app:layout_constraintStart_toEndOf="@id/guideline_left"
		app:layout_constraintEnd_toEndOf="parent">
		<TextView
			android:id="@+id/billing_header_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Billing"
			android:textColor="@color/COLOUR_HEADER_TEXT"
			android:textSize="20sp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@id/btn_back"
			app:layout_constraintStart_toStartOf="parent" />

		<ImageButton
			android:id="@+id/btn_back"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="back button"
			android:src="@drawable/back_yellow"
			app:layout_constraintStart_toEndOf="@id/billing_header_text"
			app:layout_constraintEnd_toEndOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<!-- BOTTOM ACTION BUTTONS -->
	<LinearLayout
		android:id="@+id/bottom_action_buttons"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		app:layout_constraintTop_toBottomOf="@id/guideline_bottom"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<Button
			android:id="@+id/btnOrderMore"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_marginEnd="4dp"
			android:layout_weight="2"
			android:backgroundTint="#FF9800"
			android:text="ORDER MORE"
			android:textColor="@android:color/white" />

		<ImageButton
			android:id="@+id/btnLanguage"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_margin="4dp"
			android:layout_weight="1"
			android:background="@color/ANDROID_BUTTON_BACKGROUND"
			android:gravity="center"
			android:onClick="onButtonLanguage"
			android:src="@drawable/languages_yellow"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageButton
			android:id="@+id/btnDiscount"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_margin="4dp"
			android:layout_weight="1"
			android:background="@color/ANDROID_BUTTON_BACKGROUND"
			android:gravity="center"
			android:onClick="onButtonDiscount"
			android:src="@drawable/icon_discount_yellow"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageButton
			android:id="@+id/btnMessage"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_margin="4dp"
			android:layout_weight="1"
			android:background="@color/ANDROID_BUTTON_BACKGROUND"
			android:gravity="center"
			android:onClick="onButtonMessage"
			android:src="@drawable/abc_yellow"
			tools:ignore="SpeakableTextPresentCheck" />

		<Button
			android:id="@+id/btnConfirmOrder"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginStart="4dp"
			android:layout_weight="2"
			android:backgroundTint="#4CAF50"
			android:text="CONFIRM ORDER"
			android:onClick="onButtonEnter"
			android:textColor="@android:color/white" />
	</LinearLayout>

	<TextView
		android:id="@+id/tableName"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="Table 5"
		android:gravity="center"
		android:textAlignment="center"
		android:background="@color/COLOUR_SELECTED_BACKGROUND"
		android:textColor="@color/COLOUR_SELECTED_TEXT"
		android:textSize="20sp"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/total_bill_price"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="1dp"
		android:background="@color/COLOUR_TOTAL_BACKGROUND"
		android:gravity="center"
		android:text="0,00"
		android:textColor="@color/COLOUR_TOTAL_TEXT"
		android:textSize="32sp"
		app:layout_constraintBottom_toTopOf="@id/bottom_action_buttons"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/layoutBillingItems"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="8dp"
		android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
		app:layout_constraintBottom_toTopOf="@+id/total_bill_price"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tableName" />

	<!-- CENTER COLUMN: Control Buttons -->

	<!-- The content inside ScrollView remains the same, as it's a good way to manage scrolling content -->
	<LinearLayout
		android:layout_width="0dp"    android:layout_height="0dp"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@id/guideline_top"
		app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
		app:layout_constraintStart_toEndOf="@id/guideline_left"
		app:layout_constraintEnd_toStartOf="@id/guideline_right"
		>

		<!-- Pay: -->
		<TextView
			android:id="@+id/btn_quick_payments"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Pay:"
			android:textColor="@android:color/black" />

		<!-- GridLayout for payment buttons -->
		<GridLayout
			android:layout_width="match_parent"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:layout_marginBottom="0dp"
			android:columnCount="3"
			android:rowCount="2">

			<ImageButton
				android:id="@+id/btnEuro5"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButton5Euro"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/icon_5euro40" />

			<ImageButton
				android:id="@+id/btnEuro10"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButton10Euro"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/icon_10euro40" />

			<ImageButton
				android:id="@+id/btnEuro20"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButton20Euro"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/icon_20euro40" />

			<ImageButton
				android:id="@+id/btnEuro50"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButton50Euro"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/icon_50euro40" />

			<ImageButton
				android:id="@+id/btnCash"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButtonCash"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/pay_cash40" />

			<ImageButton
				android:id="@+id/btnPin"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_rowWeight="1"
				android:layout_columnWeight="1"
				android:layout_margin="4dp"
				android:onClick="onButtonPin"
				android:background="@color/ANDROID_BUTTON_BACKGROUND"
				android:src="@drawable/pay_pin40" />
		</GridLayout>

		<!-- Print sections -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginBottom="4dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/txtKitchenPrints"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Kitchen Prints:"
				android:textColor="@android:color/black" />

			<Button
				android:id="@+id/btnKitchenPrints"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="1x" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginBottom="4dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/txtBillPrints"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Bill Prints:"
				android:textColor="@android:color/black" />

			<Button
				android:id="@+id/btnBillPrints"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="1x" />
		</LinearLayout>
	</LinearLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/layout_billing_payments"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
		android:choiceMode="singleChoice"
		android:fadingEdge="none"
		android:scrollbars="none"
		android:scrollingCache="true"
		app:layout_constraintBottom_toTopOf="@id/bottom_action_buttons"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/guideline_right"
		app:layout_constraintTop_toBottomOf="@id/guideline_top" />

</androidx.constraintlayout.widget.ConstraintLayout>
