<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white">

	<!-- GUIDELINES to define the three-column structure -->
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.40" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.70" /> <!-- Adjusted from 0.8 to give payments more space -->

	<!-- BOTTOM ACTION BUTTONS -->
	<LinearLayout
		android:id="@+id/bottom_action_buttons"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="#EEEEEE"
		android:orientation="horizontal"
		android:padding="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<Button
			android:id="@+id/btnOrderMore"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginEnd="4dp"
			android:layout_weight="4"
			android:backgroundTint="#FF9800"
			android:text="ORDER MORE"
			android:textColor="@android:color/white" />

		<ImageButton
			android:id="@+id/btnLanguage"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:layout_weight="1"
			android:background="@color/ANDROID_BUTTON_BACKGROUND"
			android:gravity="center"
			android:onClick="onButtonLanguage"
			android:src="@drawable/languages_yellow"
			tools:ignore="SpeakableTextPresentCheck" />

		<Button
			android:id="@+id/btnConfirmOrder"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginStart="4dp"
			android:layout_weight="5"
			android:backgroundTint="#4CAF50"
			android:text="CONFIRM ORDER"
			android:textColor="@android:color/white" />
	</LinearLayout>

	<!-- LEFT COLUMN: Order List -->
	<TextView
		android:id="@+id/tableName"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="Table 5"
		android:textAlignment="center"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/totalPrice"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="Total: â‚¬0.00"
		android:textAlignment="center"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@id/bottom_action_buttons"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/layoutBillingItems"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="8dp"
		android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
		app:layout_constraintBottom_toTopOf="@+id/totalPrice"
		app:layout_constraintEnd_toStartOf="@+id/guideline_left"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tableName" />

	<!-- CENTER COLUMN: Control Buttons -->
	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingBottom="8dp"
		app:layout_constraintBottom_toTopOf="@+id/bottom_action_buttons"
		app:layout_constraintEnd_toStartOf="@+id/guideline_right"
		app:layout_constraintStart_toStartOf="@+id/guideline_left"
		app:layout_constraintTop_toTopOf="parent">

		<!-- The content inside ScrollView remains the same, as it's a good way to manage scrolling content -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Discount Button -->
			<Button
				android:id="@+id/btnDiscount"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:text="Discount"
				android:textAllCaps="false" />

			<!-- Pay: -->
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Pay:"
				android:textColor="@android:color/black" />

			<!-- GridLayout for payment buttons -->
			<GridLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:columnCount="3"
				android:rowCount="2">

				<ImageButton
					android:id="@+id/btnEuro5"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/icon_5euro40" />

				<ImageButton
					android:id="@+id/btnEuro10"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/icon_10euro40" />

				<ImageButton
					android:id="@+id/btnEuro20"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/icon_20euro40" />

				<ImageButton
					android:id="@+id/btnEuro50"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/icon_50euro40" />

				<ImageButton
					android:id="@+id/btnCash"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/pay_cash40" />

				<ImageButton
					android:id="@+id/btnPin"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_rowWeight="1"
					android:layout_columnWeight="1"
					android:layout_margin="4dp"
					android:background="@color/ANDROID_BUTTON_BACKGROUND"
					android:src="@drawable/pay_pin40" />
			</GridLayout>

			<!-- Print sections -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txtKitchenPrints"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Kitchen Prints:"
					android:textColor="@android:color/black" />

				<Button
					android:id="@+id/btnKitchenPrints"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="1x" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txtBillPrints"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Bill Prints:"
					android:textColor="@android:color/black" />

				<Button
					android:id="@+id/btnBillPrints"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="1x" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<!-- RIGHT COLUMN: Payments -->
	<ImageButton
		android:id="@+id/btn_back"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:contentDescription="back button"
		android:src="@drawable/back_yellow"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/layout_billing_payments"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
		android:choiceMode="singleChoice"
		android:fadingEdge="none"
		android:scrollbars="none"
		android:scrollingCache="true"
		app:layout_constraintBottom_toTopOf="@+id/bottom_action_buttons"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/guideline_right"
		app:layout_constraintTop_toBottomOf="@+id/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
