<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@android:color/white">

	<!-- Main Content Row -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:padding="8dp">

		<!-- LEFT: Order List (40% width) -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.4"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:id="@+id/tableName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Table 5"
				android:textSize="20sp"
				android:textColor="@android:color/black"
				android:textAlignment="center"/>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/layout_billing_items"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:choiceMode="singleChoice"
				android:scrollingCache="true"
				android:scrollbars="none"
				android:fadingEdge="none"
				android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
				android:layout_marginBottom="60dip"/>

			<TextView
				android:id="@+id/totalPrice"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Total: â‚¬0.00"
				android:textSize="18sp"
				android:textColor="@android:color/black"
				android:textAlignment="center"
				android:layout_marginTop="8dp"/>
		</LinearLayout>

		<!-- CENTER: Control Buttons (40% width) -->
		<ScrollView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.4"
			android:paddingLeft="8dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<!-- Discount Button -->
				<Button
					android:id="@+id/btnDiscount"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Discount"
					android:textAllCaps="false"
					android:layout_marginBottom="8dp"/>

				<!-- Quick Pay -->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Pay:"
					android:textColor="@android:color/black"/>

				<GridLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:columnCount="3"
					android:rowCount="2"
					android:layout_marginBottom="4dp">

					<ImageButton
						android:id="@+id/btnEuro5"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/icon_5euro40"/>
					<ImageButton
						android:id="@+id/btnEuro10"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/icon_10euro40"/>
					<ImageButton
						android:id="@+id/btnEuro20"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/icon_20euro40"/>
					<ImageButton
						android:id="@+id/btnEuro50"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/icon_50euro40"/>
					<ImageButton
						android:id="@+id/btnCash"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/pay_cash40"/>
					<ImageButton
						android:id="@+id/btnPin"
						style="?android:attr/buttonStyleSmall"
						android:layout_columnWeight="1"
						android:layout_rowWeight="1"
						android:layout_margin="4dp"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:background="@color/ANDROID_BUTTON_BACKGROUND"
						android:src="@drawable/pay_pin40"/>
				</GridLayout>

				<!-- Kitchen Prints -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginBottom="4dp">

					<TextView
						android:id="@+id/txtKitchenPrints"
						android:layout_height="wrap_content"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:text="Kitchen Prints:"
						android:textColor="@android:color/black"/>

					<Button
						android:id="@+id/btnKitchenPrints"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="1x"/>
				</LinearLayout>

				<!-- Bill Prints -->
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginBottom="4dp">

					<TextView
						android:id="@+id/txtBillPrints"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Bill Prints:"
						android:textColor="@android:color/black"/>

					<Button
						android:id="@+id/btnBillPrints"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="1x"/>

				</LinearLayout>

			</LinearLayout>
		</ScrollView>

		<!-- RIGHT: Payments (20% width) -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.6"
			android:orientation="vertical"
			android:padding="8dp">
			<!-- Back button -->
			<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:layout_gravity="right"
				android:src="@drawable/back_yellow"
				android:contentDescription="back button"
				android:background="?attr/selectableItemBackgroundBorderless" />
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/layout_billing_payments"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:choiceMode="singleChoice"
				android:scrollingCache="true"
				android:scrollbars="none"
				android:fadingEdge="none"
				android:background="@color/COLOUR_ORDER_BACKGROUND_EMPTY"
				android:layout_marginBottom="60dip"/>

		</LinearLayout>


	</LinearLayout>

	<!-- Bottom Action Buttons -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="#EEEEEE">

		<Button
			android:id="@+id/btnOrderMore"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="4"
			android:text="ORDER MORE"
			android:backgroundTint="#FF9800"
			android:textColor="@android:color/white"
			android:layout_marginEnd="4dp"/>

		<ImageButton
			android:id="@+id/btnLanguage"
			style="?android:attr/buttonStyleSmall"
			android:layout_margin="4dp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="@color/ANDROID_BUTTON_BACKGROUND"
			android:onClick="on_button_language"
			android:src="@drawable/languages_yellow"/>

		<Button
			android:id="@+id/btnConfirmOrder"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="5"
			android:text="CONFIRM ORDER"
			android:backgroundTint="#4CAF50"
			android:textColor="@android:color/white"
			android:layout_marginStart="4dp"/>
	</LinearLayout>
</LinearLayout>