<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/lineItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/item_name_quantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingRight="1dp"
            android:paddingLeft="16sp"
            android:textSize="18sp"
            android:textColor="@color/COLOUR_ITEM_TEXT"
            android:text="2x Loempia speciaal"
            android:paddingTop="12dp"/>
        <TextView
            android:id="@+id/item_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:gravity="right"
            android:text="15,75"
            android:textColor="@color/COLOUR_ITEM_TEXT"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/tree_item"
            android:layout_width="15dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:gravity="center"
            android:layout_alignBottom="@+id/item_name_quantity"
            android:layout_alignTop="@+id/item_price"
            />
    </RelativeLayout>
</LinearLayout>
