<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- This View is for the two-color background. It's layered behind everything else. -->
    <View
        android:id="@+id/table_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Table Name -->
    <TextView
        android:id="@+id/floor_table_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/ANDROID_BUTTON_TEXT"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/milk"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp"
        tools:text="Table 101" />

    <!-- Amount -->
    <TextView
        android:id="@+id/floor_table_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/ANDROID_BUTTON_TEXT"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/floor_table_name"
        app:layout_constraintStart_toStartOf="@id/floor_table_name"
        tools:text="$125.50" />

    <!-- Milk Icon (Top Right) -->
    <ImageView
        android:id="@+id/milk"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/milk75" />

</androidx.constraintlayout.widget.ConstraintLayout>
