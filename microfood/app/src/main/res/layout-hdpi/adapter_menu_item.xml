<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuItemButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="?attr/selectableItemBackground">

    <!-- Item Name (Top-Left) -->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/COLOUR_ITEM_TEXT"
        android:textSize="16sp"
        tools:text="Loempia speciaal"/>

    <!-- Quantity Indicator (Top-Right, visible only when selected) -->
    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/item_name"
        android:textColor="@color/COLOUR_ITEM_TEXT"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="3x"
        tools:visibility="visible"/>

    <!-- Price (Below Name) -->
    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_alignStart="@id/item_name"
        android:layout_marginTop="4dp"
        android:textColor="@color/COLOUR_ITEM_TEXT"
        android:textSize="14sp"
        tools:text="â‚¬15.75"/>
</RelativeLayout>