<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/lineItem"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="#44ffffff"
	android:orientation="horizontal"
	android:gravity="center_vertical">

	<ImageView android:id="@+id/imageTableOrTakeaway" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:contentDescription="@drawable/takeaway32"
		android:visibility="visible"
		android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/textLine" 
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/imageTableOrTakeaway"
		android:layout_marginLeft="10dip" 
		android:textSize="24sp"
		android:textColor="@color/ANDROID_BUTTON_TEXT"
		android:layout_width="wrap_content" />

	<ProgressBar android:id="@+id/progress_bart" android:gravity ="bottom|center" 
	    android:layout_toRightOf="@id/imageTableOrTakeaway"
	    android:layout_height="10dp" 
	    android:layout_width="400dp" 
	    android:max="100" android:progress="50" 
	    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
	    android:progressDrawable="@android:drawable/progress_horizontal"
	    android:indeterminateOnly="false"
	    android:background="#40FF0000"
	    android:scrollbarStyle="outsideOverlay"/>	    
	<Button android:id="@+id/buttonLine" android:gravity="center"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentRight="true" android:text="Delete" />
</RelativeLayout>
