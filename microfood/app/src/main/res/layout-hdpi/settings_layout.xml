<LinearLayout 
	android:layout_width="fill_parent" 
	android:background="@drawable/backrepeat"
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:focusable="true" 
	android:focusableInTouchMode="true"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:text="组态 SETTINGS"
		android:textSize="24sp"
    	android:background="#ff600000"
        android:textColor="#ffeeeeee"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginBottom="4dp"
		android:gravity="center"/>
	<ScrollView 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="60dip">
	    <TableLayout 
	      	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"> 
	    		    <TableRow 
	      	   	android:background="#ffaaaaaa"
	           	android:layout_width="fill_parent"
	           	android:layout_height="wrap_content">
		       <TextView
		            android:id="@+id/textDemo"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="38"
					android:paddingTop="8sp"
		            android:paddingBottom="8sp"
		            android:paddingLeft="2sp"
		            android:paddingRight="2sp"
		            android:text="Demo"
		            android:textColor="#FF0000FF"
		            android:textSize="24sp" />
				<CheckBox
				    android:id="@+id/settingsDemo"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:paddingTop="8sp"
		            android:paddingBottom="8sp"
		            android:paddingLeft="2sp"
		            android:paddingRight="2sp"
				    android:textSize="24sp"
				    android:text="" />
				</TableRow>													
	        <TableRow android:background="#ffaaaaaa"
	                  android:layout_width="fill_parent"
	                  android:layout_height="wrap_content">
	            <TextView
	                android:id="@+id/textEditName"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Naam"
	                android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
	            <EditText
	                android:id="@+id/settingsEditName"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
					android:singleLine="true"
					android:maxLength="32"
	                android:layout_weight="40"
	                android:ems="10"
	                android:imeOptions="actionDone"
	                android:text="Bart"
	                android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"	                
					android:selectAllOnFocus="true"
	                android:textSize="24sp" />

	        </TableRow>
	        <TableRow android:background="#ffaaaaaa"
	                  android:layout_width="fill_parent"
	                  android:layout_height="wrap_content">

	           <TextView
	                android:id="@+id/textEditIP"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="IP nummer"
	                android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />

				<EditText
				    android:id="@+id/settingsEditIP"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
					android:singleLine="true"
					android:maxLength="16"
					android:inputType="textUri"
				    android:layout_weight="40"
				    android:text="192.168.1.50"
					android:selectAllOnFocus="true"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:imeOptions="actionDone"
				    android:textSize="24sp" />
	        </TableRow>
	       	<TableRow 
	       	    	android:background="#ffaaaaaa"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textEditSocket"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Handheld nr"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsEditSocket"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
					android:singleLine="true"
					android:inputType="number"
					android:maxLength="1"
				    android:layout_weight="40"
				    android:text="1"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
				    android:textSize="24sp" />				   
			</TableRow>
		    <TableRow 
	       	    	android:background="#ffc0c0c0"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textEditPassword"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Password"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsEditPassword"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
				    android:inputType="textPassword"
					android:singleLine="true"
					android:maxLength="8"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:text="houkes"
				    android:textSize="24sp" />				   
			</TableRow>		
		    <TableRow 
	       	    	android:background="#ffaaaaaa"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textFontItem"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Font gerecht"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsFontItem"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:singleLine="true"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
            		android:inputType="number"
           			android:maxLength="3"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:text="24"
				    android:textSize="24sp" />   
			</TableRow>		
		    <TableRow 
	       	    	android:background="#ffc0c0c0"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textFontText"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Font tekst"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsFontText"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:singleLine="true"
					android:inputType="number"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
 					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
           			android:maxLength="3"
				    android:text="24"
				    android:textSize="24sp" />				   
			</TableRow>				
		    <TableRow 
	       	    	android:background="#ffaaaaaa"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textChinese"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:text="Chinees"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />

				<CheckBox
				    android:id="@+id/settingsChinese"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:textSize="24sp"
				    android:text="" />
			   
			</TableRow>											
		    <TableRow 
	       	    	android:background="#ffc0c0c0"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textDutch"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Nederlands"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<CheckBox
				    android:id="@+id/settingsDutch"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:textSize="24sp"
				    android:text="" />
			</TableRow>	
			<TableRow 
	       	    	android:background="#ffaaaaaa"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textFontSplash"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Font splash"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsFontSplash"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:singleLine="true"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
            		android:inputType="number"
           			android:maxLength="3"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:text="24"
				    android:textSize="24sp" />   
			</TableRow>		
		    <TableRow 
	       	    	android:background="#ffc0c0c0"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">
	           <TextView
	                android:id="@+id/textFontButton"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="38"
	                android:text="Font button"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
	                android:textColor="#FF0000FF"
	                android:textSize="24sp" />
				<EditText
				    android:id="@+id/settingsFontButton"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="40"
					android:singleLine="true"
					android:selectAllOnFocus="true"
	                android:imeOptions="actionDone"
            		android:inputType="number"
           			android:maxLength="3"
					android:paddingTop="8sp"
	                android:paddingBottom="8sp"
	                android:paddingLeft="2sp"
	                android:paddingRight="2sp"
				    android:text="24"
				    android:textSize="24sp" />				   
			</TableRow>				    
		   	</TableLayout>
	</ScrollView>
		
	<TableLayout 
	    android:layout_width="fill_parent"
	    android:background="#ffffffff"
	    android:layout_marginTop="-60dip"
	    android:layout_height="60dp">
		<TableRow
      		android:background="#ffaaaaaa"
      		
         	android:layout_width="fill_parent"
            android:layout_height="wrap_content">
	    	<Button
				android:layout_width="0dp"
			    android:layout_height="60dp"
			    android:layout_weight="40"
			    android:paddingTop="10dip"
			    android:paddingBottom="10dip"
			    android:textSize="24sp"
			    android:onClick="button_settings_cancel"
			    android:textColor="#ffFFFFFF"
			    android:background="#FFa0a0FF"
			    android:text="取消 STOP" />
			<TextView
	            android:layout_height="wrap_content"
	            android:layout_weight="20" />
			<Button
			    android:layout_width="0dp"
			    android:layout_weight="40"
			    android:layout_height="60dp"		    
			    android:paddingTop="10dip"
			    android:paddingBottom="10dip"
			    android:onClick="button_settings_ok"
	            android:textSize="24sp"
				android:textColor="#ffFFFFFF"
			    android:background="#FFa0a0FF"			
			    android:text ="好 OK" />
		</TableRow>
	</TableLayout>
	
</LinearLayout>

