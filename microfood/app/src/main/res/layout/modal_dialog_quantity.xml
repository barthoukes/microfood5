<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/COLOUR_MESSAGEBOX_BACKGROUND"
    android:padding="16dp">

    <!-- Section 1: Title -->
    <TextView
        android:id="@+id/quantity_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/COLOUR_HEADER_TEXT"
        tools:text="Select Quantity" />

    <!-- Section 2: Number Buttons (in a ConstraintLayout for easy chaining) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_quantity_0"
            style="@style/Widget.App.QuantityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0x"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginVertical="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_quantity_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_quantity_1"
            style="@style/Widget.App.QuantityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:text="1x"
            app:layout_constraintEnd_toStartOf="@+id/button_quantity_2"
            app:layout_constraintStart_toEndOf="@+id/button_quantity_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_quantity_2"
            style="@style/Widget.App.QuantityButton"
            android:layout_width="0dp"
            android:layout_marginVertical="8dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_quantity_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Section 3: Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_escape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"
            app:iconGravity="top"
            android:text="cancel"
            app:icon="@drawable/icon_cancel_yellow"
            android:onClick="onButtonCancel"
            tools:ignore="MissingPrefix" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconGravity="top"
            android:layout_marginEnd="1dp"
            android:text="bill"
            android:layout_marginVertical="8dp"
            app:icon="@drawable/euro_yellow"
            android:onClick="onButtonBill"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

</LinearLayout>
