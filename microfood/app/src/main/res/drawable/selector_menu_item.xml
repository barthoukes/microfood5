<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/COLOUR_ORDER_BACKGROUND_SELECTED"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/COLOUR_ORDER_BACKGROUND_EVEN"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/COLOUR_ORDER_BACKGROUND_ODD"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>